<div class="navbar bg-danger navbar-dark navbar-expand-sm">
    <div class="container">
        <a href="/" class="navbar-brand">Commerce App</a>
        <ul class="navbar-nav mr-auto">
            @if (!User.Identity.IsAuthenticated || User.IsInRole("Customer"))
            {
                <li class="nav-item">
                    <a asp-controller="Shop" asp-action="List" class="nav-link">Products</a>
                </li>
            }
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Customer"))
                {
                    <li class="nav-item">
                        <a asp-controller="Basket" asp-action="Index" class="nav-link">Basket</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Order" asp-action="GetOrders" class="nav-link">Orders</a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="ProductList" class="nav-link">Products</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="CategoryList" class="nav-link">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="RoleList" class="nav-link">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="UserList" class="nav-link">Users</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="GetOrders" class="nav-link">Orders</a>
                    </li>
                }
            }
        </ul>
        <ul class="navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Profile" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                </li>
            }
        </ul>
    </div>
</div>
