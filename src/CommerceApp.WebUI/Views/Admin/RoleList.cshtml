@model IEnumerable<IdentityRole>

<h1 class="h3">Role List</h1>
<hr>
<a asp-controller="Admin" asp-action="RoleCreate" class="btn-danger btn-primary btn-sm">Add Role</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <td style="width:30px;">Id</td>
                <td style="width:100px;">Role Name</td>
                <td style="width:150px;">Options</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Admin" asp-action="RoleEdit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                        <form asp-controller="Admin" asp-action="RoleDelete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <input type="hidden" asp-for="@item.Id">
                            <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles</h3>
    </div>
}
