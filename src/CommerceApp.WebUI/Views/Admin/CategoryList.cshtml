@model CategoryListViewModel

<h1 class="h3">Admin Categories</h1>
<hr>
<a asp-controller="Admin" asp-action="CategoryCreate" class="btn-danger btn-primary btn-sm">Add Category</a>
@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <td style="width:40px;">Id</td>
                <td>Name</td>
                <td style="width:150px;">Options</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Admin" asp-action="CategoryEdit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                        <form asp-controller="Admin" asp-action="CategoryDelete" asp-route-id="@item.CategoryId" method="post" style="display:inline;">
                            <input type="hidden" asp-for="@item.CategoryId">
                            <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Categories</h3>
    </div>
}
